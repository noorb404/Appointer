<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SignUpActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#000000">



        <TextView
            android:layout_width="118dp"
            android:layout_height="72dp"
            android:layout_gravity="center"
            android:layout_marginBottom="190dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/signuptxt" />

        <TextView
            android:layout_width="235dp"
            android:layout_height="34dp"
            android:background="@drawable/username"
            android:layout_gravity="center"
            android:layout_marginBottom="130dp"
            android:layout_marginRight="32dp" />

        <EditText
            android:id="@+id/UsernameEditTxt"
            android:hint="Username"
            android:textColorHint="#DCDCDC"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:layout_width="180dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:layout_marginBottom="130dp"
            android:layout_marginRight="20dp"/>

        <TextView
            android:layout_width="235dp"
            android:layout_height="34dp"
            android:background="@drawable/phoneedittxt"
            android:layout_gravity="center"
            android:layout_marginBottom="85dp"
            android:layout_marginRight="32dp" />

        <EditText
            android:id="@+id/PhoneEditTxt"
            android:hint="Phone Number"
            android:textColorHint="#DCDCDC"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:layout_width="180dp"
            android:layout_height="39dp"
            android:layout_gravity="center"
            android:layout_marginBottom="85dp"
            android:layout_marginRight="20dp"/>

        <TextView
            android:layout_width="235dp"
            android:layout_height="34dp"
            android:background="@drawable/password"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            android:layout_marginRight="32dp" />

        <EditText
            android:id="@+id/PasswordEditTxt"
            android:hint="Password"
            android:textColorHint="#DCDCDC"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:layout_width="180dp"
            android:layout_height="39dp"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            android:layout_marginRight="20dp"/>

        <TextView
            android:layout_width="235dp"
            android:layout_height="34dp"
            android:background="@drawable/password"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginRight="32dp" />

        <EditText
            android:id="@+id/ConfPasswordEditTxt"
            android:hint="Confirm Password"
            android:textColorHint="#DCDCDC"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:layout_width="180dp"
            android:layout_height="39dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"/>

        <Button
            android:id="@+id/SignUpButton"
            android:layout_width="276dp"
            android:layout_height="57dp"
            android:background="@drawable/signupbtn"
            android:layout_gravity="center"
            android:layout_marginTop="90dp"
            android:layout_marginRight="14dp"/>

        <TextView
            android:layout_width="207dp"
            android:layout_height="27dp"
            android:background="@drawable/alreadyhaveacc"
            android:layout_gravity="center"
            android:layout_marginTop="260dp"
            android:layout_marginRight="34dp" />

        <Button
            android:id="@+id/Logintxtbtn"
            android:layout_width="49dp"
            android:layout_height="37dp"
            android:background="@drawable/logintxt"
            android:layout_gravity="center"
            android:layout_marginTop="265dp"
            android:layout_marginLeft="95dp" />
    </android.support.v7.widget.CardView>
</LinearLayout>