<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WHOAREUActivity">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#000000">

        <TextView
            android:layout_width="200sp"
            android:layout_height="30sp"
            android:textColor="#ffffff"
            android:fontFamily="@font/acme"
            android:textSize="25sp"
            android:text="WHO ARE YOU?"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="100dp"/>
        <TextView
            android:layout_width="320.03dp"
            android:layout_height="3sp"
            android:background="@drawable/whoareu"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="35dp"/>
        <TextView
            android:layout_width="213dp"
            android:layout_height="56dp"
            android:background="@drawable/businessex"
            android:layout_marginTop="144dp"
            android:layout_marginLeft="75dp"/>
        <Button
            android:id="@+id/startbusbtn"

            android:fontFamily="@font/acme"
            android:textSize="20dp"
            android:layout_width="250dp"
            android:layout_height="52dp"
            android:background="@drawable/pbutton"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="70dp"/>
        <TextView
            android:layout_width="213dp"
            android:layout_height="56dp"
            android:background="@drawable/customerex"
            android:layout_marginTop="320dp"
            android:layout_marginLeft="75dp"/>
        <Button
            android:id="@+id/startcustbtn"
            android:layout_width="250dp"
            android:layout_height="52dp"
            android:background="@drawable/cbutton"
            android:layout_marginTop="380dp"
            android:layout_marginLeft="70dp"/>
        <ImageView
            android:layout_width="174dp"
            android:layout_height="34dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="119dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/blacklogo"/>

    </android.support.v7.widget.CardView>
</LinearLayout>