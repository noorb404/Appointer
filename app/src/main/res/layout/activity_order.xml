<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddServiceActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:layout_width="412dp"
            android:layout_height="73dp"
            android:background="@drawable/orderbb" />

        <Button
            android:id="@+id/backbtn"
            android:layout_width="21dp"
            android:layout_height="23dp"
            android:background="@drawable/backwhitebtn"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="25dp"/>
        <TextView
            android:text="AUGUST 2018"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="100dp"/>
        <TextView
            android:layout_width="283dp"
            android:layout_height="30dp"
            android:background="@drawable/daysorder"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="65dp"/>
        <ImageView
            android:layout_width="283dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginBottom="120dp"
            android:background="@drawable/linegray"/>
        <ImageView
            android:layout_width="412dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginBottom="90dp"
            android:background="@drawable/freeseatsgb"/>
        <android.support.v7.widget.RecyclerView
            android:layout_width="412dp"
            android:layout_height="60dp"
            android:layout_marginTop="249dp"
            android:orientation="horizontal"
            android:id="@+id/FreeSeatsrecycleid"
            android:background="#F5F4F4">

        </android.support.v7.widget.RecyclerView>
        <TextView
            android:id="@+id/servicename"
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:layout_marginTop="320dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/bree_serif"
            android:text="Serivce Name"/>
        <TextView
            android:id="@+id/proname"
            android:layout_width="130dp"
            android:layout_height="20dp"
            android:layout_marginTop="340dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/bree_serif"
            android:text="Professional Name"/>
        <TextView
            android:id="@+id/priceID"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_marginTop="320dp"
            android:layout_marginLeft="350dp"
            android:fontFamily="@font/bree_serif"
            android:text="20.00$"/>
        <TextView
            android:id="@+id/timeID"
            android:layout_width="130dp"
            android:layout_height="20dp"
            android:layout_marginTop="340dp"
            android:layout_marginLeft="350dp"
            android:fontFamily="@font/bree_serif"
            android:text="11:15 PM"/>
        <ImageView
            android:layout_width="283dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:background="@drawable/linegray"/>



        <Button
            android:id="@+id/ConfirmButton"
            android:layout_width="236dp"
            android:layout_height="47dp"
            android:background="@drawable/orconfirm"
            android:layout_gravity="center"
            android:layout_marginTop="180dp"/>

        <TextView
            android:layout_width="174sp"
            android:layout_height="34sp"
            android:background="@drawable/addservicelogo"
            android:layout_gravity="center"
            android:layout_marginTop="280dp"
            />

    </android.support.v7.widget.CardView>
</LinearLayout>