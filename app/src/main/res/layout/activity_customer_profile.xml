<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerProfileActivity">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="412dp"
            android:layout_height="131dp"
            android:background="@drawable/bbprof" />
        <TextView
            android:id="@+id/cusName"
            android:text="Customer Name"
            android:textSize="25dp"
            android:textColor="#ffffff"
            android:layout_width="200dp"
            android:layout_height="57dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="120dp"
            android:fontFamily="@font/acme"/>
        <Button
            android:id="@+id/CustomerPhoto"
            android:layout_width="86dp"
            android:layout_height="80dp"
            android:background="@drawable/profilephoto"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"/>

        <ImageView
            android:layout_width="412dp"
            android:layout_height="73dp"
            android:background="@drawable/bboardd"
            android:layout_gravity="center"
            android:layout_marginTop="294dp"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:background="@drawable/profilebtn"
            android:layout_marginTop="600dp"
            android:layout_marginLeft="305dp"/>
        <Button
            android:id="@+id/businessbtn"
            android:layout_width="53dp"
            android:layout_height="50dp"
            android:background="@drawable/businesssimg"
            android:layout_marginTop="600dp"
            android:layout_marginLeft="220dp"/>
        <Button
            android:id="@+id/searchBtn"
            android:layout_width="41dp"
            android:layout_height="52dp"
            android:background="@drawable/searchbtn"
            android:layout_marginTop="600dp"
            android:layout_marginLeft="150dp"/>
        <Button
            android:id="@+id/appBtn"
            android:layout_width="61dp"
            android:layout_height="52dp"
            android:background="@drawable/appbtn"
            android:layout_marginTop="600dp"
            android:layout_marginLeft="60dp"/>

        <Button
            android:id="@+id/accountdetails"
            android:layout_width="412dp"
            android:layout_height="55dp"
            android:layout_marginTop="130dp"
            android:background="@drawable/accdetbuton" />

        <Button
            android:id="@+id/payments"
            android:layout_width="412dp"
            android:layout_height="55dp"
            android:layout_marginTop="184dp"
            android:background="@drawable/pymntsbtn" />

        <Button
            android:id="@+id/settings"
            android:layout_width="412dp"
            android:layout_height="55dp"
            android:layout_marginTop="238dp"
            android:background="@drawable/settingsbtn" />

        <Button
            android:id="@+id/feedback"
            android:layout_width="412dp"
            android:layout_height="55dp"
            android:layout_marginTop="292dp"
            android:background="@drawable/feedbackbtn" />

        <Button
            android:id="@+id/about"
            android:layout_width="412dp"
            android:layout_height="55dp"
            android:layout_marginTop="345dp"
            android:background="@drawable/aboutappb" />

        <Button
            android:id="@+id/logout"
            android:layout_width="412dp"
            android:layout_height="55dp"
            android:layout_marginTop="399dp"
            android:background="@drawable/logout" />


    </android.support.v7.widget.CardView>

</LinearLayout>